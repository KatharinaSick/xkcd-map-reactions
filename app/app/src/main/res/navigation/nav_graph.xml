<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/PhraseInputFragment">

    <fragment
        android:id="@+id/PhraseInputFragment"
        android:name="dev.ksick.mapreactions.PhraseInputFragment"
        tools:layout="@layout/fragment_phrase_input">

        <action
            android:id="@+id/action_PhraseInputFragment_to_MapFragment"
            app:destination="@id/MapFragment" />
    </fragment>
    <fragment
        android:id="@+id/MapFragment"
        android:name="dev.ksick.mapreactions.MapFragment"
        tools:layout="@layout/fragment_map">

        <action
            android:id="@+id/action_MapFragment_to_PhraseInputFragment"
            app:destination="@id/PhraseInputFragment" />
    </fragment>
</navigation>